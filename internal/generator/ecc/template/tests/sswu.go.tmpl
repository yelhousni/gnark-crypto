func {{$CurveName}}CoordSetString(z *{{$CoordType}}, s string) {
	ssplit := strings.Split(s, ",")
	if len(ssplit) != {{$TowerDegree}} {
		panic("not equal to tower size")
	}
	z.SetString(
		{{range $i := interval 0 $TowerDegree}}
		ssplit[{{$i}}],{{end}}
	)
}
